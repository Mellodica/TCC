<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/png" href="assets/img/favicon.ico">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title>@ViewData["Title"] - LAYOUT CONTROLE</title>
	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
	<meta name="viewport" content="width=device-width" />

	<environment include="Development">
		<link href="assets/css/bootstrap.min.css" rel="stylesheet" />
		<link rel=" stylesheet" href="~/assets/css/font-awesome.min.css" />
		<link href="assets/css/animate.min.css" rel="stylesheet" />
		<link rel="stylesheet" href="assets/css/light-bootstrap-dashboard.css?v=1.4.0" />
		<link href="assets/css/pe-icon-7-stroke.css" rel="stylesheet" />
	</environment>
	<environment exclude="Development">
		<link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
			  asp-fallback-href="~/assets/css/font-awesome.min.css" />
	</environment>
	
	@RenderSection("Styles", required: false)
</head>
<body>
	<div>
		@RenderBody()
	</div>
	<environment include="Development">
		<script src="assets/js/jquery.3.2.1.min.js" type="text/javascript"></script>
		<script src="assets/js/bootstrap.min.js" type="text/javascript"></script>
		<script src="assets/js/chartist.min.js"></script>
		<script src="~/assets/js/bootstrap-notify.js"></script>
		<script src="assets/js/light-bootstrap-dashboard.js?v=1.4.0"></script>



		<script src="assets/js/demo.js"></script>
		<script type="text/javascript">
			$(document).ready(function () {

				demo.initChartist();

				$.notify({
					icon: 'pe-7s-gift',
					message: "Bem vindo a o <b>Painel de Controle</b> - Você não tem Avisos."

				}, {
						type: 'info',
						timer: 4000
					});

			});
		</script>
	</environment>

	@RenderSection("ScriptPage", false);
</body>
</html>
