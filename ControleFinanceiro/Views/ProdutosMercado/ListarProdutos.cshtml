@model IEnumerable<ControleFinanceiro.Models.ProdutoMercado>

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-9 centro">
				<div class="card">
					<hr />
					<div class="header">
						<h4 class="title">@ViewData["Title"]</h4>
						<br />
					</div>
					<div class="content">
						<div class="row">
							<div class="form-group col-md-12">
								<div class="form-group">
									<label class="control-label col-md-2">Quantidade</label>
									<div class="col-md-10">
										<input type="text" id="Quantidade" name="Quantidade" />
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-md-2">Produto</label>
									<div class="col-md-10">
										<input type="text" id="ProdutoNome" name="ProdutoNome" />
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-md-2">Valor Unitario</label>
									<div class="col-md-10">
										<input type="text" id="ValorUnitario" name="ValorUnitario" />
									</div>
								</div>
								<div class="form-group">
									<div class="col-md-offset-2 col-md-10">
										<a href="#" onclick="SalvarProdutos();">Gravar Produtos</a>
									</div>
								</div>
							</div>

							<input type="hidden" id="idMercado" value="@ViewBag.Mercado" />

							<table class="table">
								<thead>
									<tr>
										<th>
											@Html.DisplayNameFor(model => model.Quantidade)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.ProdutoNome)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.ValorUnitario)
										</th>
										<th></th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										var linha = "tr" + item.ProdutoId;
										<tr id="@linha">
											<td>
												@Html.DisplayFor(modelItem => item.Quantidade)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.ProdutoNome)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.ValorUnitario)
											</td>
											<td>
												<a href="" onclick="ExcluirItem(@item.ProdutoId);">Excluir</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>