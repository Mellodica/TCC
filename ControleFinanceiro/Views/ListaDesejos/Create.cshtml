@model ControleFinanceiro.Models.ViewModel.DesejoViewModel

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
	<link href="~/css/estilodejeso2.css" rel="stylesheet" />
</head>
<body>
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-10">
					<div class="card">
						<hr />
						<div class="container">
							<div class="row">
								<div class="header">
									<h4 class="title">Escolha o produto da lista de Desejo!</h4>
									<!--<p class="category">Subtitulo..</p>-->
									<br />
								</div>
								<form>
									<div class="row">
										<div class="col-md-10">
											<div class="input-field">
												<input type="text" class="form-control" name="" required="">
												<label>Digite o Nome do Produto</label>
												<span></span>
											</div>
										</div>
									</div>
								</form>
								<form asp-action="Create">
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									<div class="row">
										<div class="col-md-10">
											<div class="input-field">
												<input asp-for="ListaDesejos.DesejoValor" class="form-control" name="" required="" />
												<label>Valor Do produto</label>
												<span asp-validation-for="ListaDesejos.DesejoValor" class="text-danger"></span>
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-10">
											<div class="form-group">
												<label asp-for="ListaDesejos.DesejoData"></label>
												<input asp-for="ListaDesejos.DesejoData" class="form-control" name="" required="" />
												<span asp-validation-for="ListaDesejos.DesejoData" class="text-danger"></span>
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-10">
											<div class="form-group">
												<label asp-for="ListaDesejos.ListaProduto" class="control-label"></label>
												<select asp-for="ListaDesejos.ProdId" class="form-control" asp-items="@(new SelectList(Model.ListaProdutos, "ProdutoId", "ProdutoNome"))"> </select>
												<span asp-validation-for="ListaDesejos.ProdId" class="text-danger"></span>
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-10">
											<div class="form-group">
												<label asp-for="ListaDesejos.Categoria" class="control-label"></label>
												<select asp-for="ListaDesejos.CategoId" class="form-control" asp-items="@(new SelectList(Model.Categorias, "CategoriaId", "CategoriaNome"))"> </select>
												<span asp-validation-for="ListaDesejos.CategoId" class="text-danger"></span>
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-10">
											<div class="form-group">
												<label asp-for="ListaDesejos.FormaPagamento" class="control-label"></label>
												<select asp-for="ListaDesejos.FormaPagamento" class="form-control" asp-items="@(new SelectList(Model.FormaPagamentos, "FormaId", "FormaNome"))"></select>
												<span asp-validation-for="ListaDesejos.FormaPagamento" class="text-danger"></span>
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-10">
											<div class="form-group">
												<label asp-for="ListaDesejos.StatusCompra" class="control-label"></label>
												<select asp-for="ListaDesejos.StatId" class="form-control" asp-items="@(new SelectList(Model.StatusCompras, "StatusId", "StatusNome"))"></select>
												<span asp-validation-for="ListaDesejos.StatId" class="text-danger"></span>
											</div>
										</div>
									</div>
								</form>
							</div>
							<div class="row">
								<form>
									<div class="row">
										<div class="col-md-5">
											<input type="submit" value="Create" name="" class="btn">
										</div>
										<div class="col-md-1">
											<a asp-action="Index" class="btn btn-info btn-fill pull-left">Voltar à Lista</a>
											<div class="clearfix"></div>
										</div>
									</div>
								</form>
							</div>
						</div>
						<hr />
					</div>
				</div>
			</div>
		</div>
	</div>
</body>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
