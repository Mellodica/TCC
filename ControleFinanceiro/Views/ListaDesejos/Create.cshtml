@model ControleFinanceiro.Models.ListaDesejo

@{
	ViewData["Title"] = "Adicionar um novo Desejo";
	Layout = "~/Views/Shared/_LayoutGeral.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-9 centro">
				<div class="card">
					<hr />
					<div class="header">
						<h4 class="title">@ViewData["Title"]</h4>
						<br />
					</div>
					<div class="content">
						<div class="row">
							<div class="form-group col-md-12">
								<form asp-action="Create">
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									<div class="form-group">
										<label asp-for="DesejoNome" class="control-label hidden"></label>
										<input asp-for="DesejoNome" placeholder="Nome do produto" class="form-control" />
										<span asp-validation-for="DesejoNome" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="DesejoDescricao" class="control-label hidden"></label>
										<input asp-for="DesejoDescricao" placeholder="Descrição do produto" class="form-control" />
										<span asp-validation-for="DesejoDescricao" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="DesejoValor" class="control-label hidden"></label>
										<input asp-for="DesejoValor" placeholder="Valor do produto" class="form-control" />
										<span asp-validation-for="DesejoValor" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="DesejoData" class="control-label hidden"></label>
										<input asp-for="DesejoData" placeholder="Previsão de compra" class="form-control" />
										<span asp-validation-for="DesejoData" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="DesejoLoja" class="control-label hidden"></label>
										<input asp-for="DesejoLoja" placeholder="Link da loja" class="form-control" />
										<span asp-validation-for="DesejoLoja" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="Categoria.CategoriaNome" class="control-label hidden"></label>
										<select asp-for="CategoriaId" class="form-control" asp-items="@(new SelectList(@ViewBag.Categorias, "CategoriaId", "CategoriaNome"))"></select>
									</div>
									<div class="form-group">
										<label asp-for="FormaPagamento.FormaNome" class="control-label hidden"></label>
										<select asp-for="FormaId" class="form-control" asp-items="@(new SelectList(@ViewBag.Formas, "FormaId", "FormaNome"))"></select>
									</div>
									<div class="form-group">
										<label asp-for="StatusCompra.StatusNome" class="control-label hidden"></label>
										<select asp-for="StatusId" class="form-control" asp-items="@(new SelectList(@ViewBag.StatusCompras, "StatusId", "StatusNome"))"></select>
									</div>
									<div class="form-group text-left h3">
										<input type="submit" value="Registrar" class="btn btn-block btn-fill" />
										<a asp-action="Index" class="btn btn-block btn-info btn-fill pull-right">Voltar</a>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
</div>

@section ScriptPage {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
