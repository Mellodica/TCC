@model ControleFinanceiro.Models.ViewModel.DesejoViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>ListaDesejo</h4>
<hr />

<div>
    <a asp-action="Index" asp-controller="Controles" class="btn btn-info">Voltar ao Painel</a>
    <a asp-action="Index" class="btn btn-default">Voltar à Lista</a>
</div>


<div class="container">
    <h2>Escolha o produto sua lista de Desejo!</h2>
    <form>
        <div class="input-field">
            <input type="text" name="" required="">
            <label>Digite o nome do Produto</label>
            <span></span>
        </div>
        <input type="submit" value="Inserir" name="" class="btn">
    </form>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ListaDesejos.DesejoValor" class="control-label"></label>
                <input asp-for="ListaDesejos.DesejoValor" class="form-control" />
                <span asp-validation-for="ListaDesejos.DesejoValor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ListaDesejos.DesejoData" class="control-label"></label>
                <input asp-for="ListaDesejos.DesejoData" class="form-control" />
                <span asp-validation-for="ListaDesejos.DesejoData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ListaDesejos.ListaProduto" class="control-label"></label>
                <select asp-for="ListaDesejos.ProdId" class="form-control" asp-items="@(new SelectList(Model.ListaProdutos, "ProdutoId", "ProdutoNome"))"> </select>
                <span asp-validation-for="ListaDesejos.ProdId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ListaDesejos.Categoria" class="control-label"></label>
                <select asp-for="ListaDesejos.CategoId" id="tr" class="form-control" asp-items="@(new SelectList(Model.Categorias, "CategoriaId", "CategoriaNome"))"></select>
                <span asp-validation-for="ListaDesejos.CategoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ListaDesejos.FormaPagamento" class="control-label"></label>
                <select asp-for="ListaDesejos.FormaPagamento" class="form-control" asp-items="@(new SelectList(Model.FormaPagamentos, "FormaId", "FormaNome"))"></select>
                <span asp-validation-for="ListaDesejos.FormaPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ListaDesejos.StatusCompra" class="control-label"></label>
                <select asp-for="ListaDesejos.StatId" class="form-control" asp-items="@(new SelectList(Model.StatusCompras, "StatusId", "StatusNome"))"></select>
                <span asp-validation-for="ListaDesejos.StatId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>
<script>
    
    $(function () {
        $.ajax({
            dataType: "ListaDesejo",
            type: "POST",
            url: "/ListaDesejos/Create",
            data:{body},
            success: function (data) {
                $(data).each(function (i) {
                    document.writeln("<p>Nome: " + dados[i].Nome+"</p>")
                });
            }
        });
    });
    </Script>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
