@model ControleFinanceiro.Models.ViewModel.DesejoViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>ListaDesejo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ListaDesejos.DesejoValor" class="control-label"></label>
                <input asp-for="ListaDesejos.DesejoValor" class="form-control" />
                <span asp-validation-for="ListaDesejos.DesejoValor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ListaDesejos.DesejoData" class="control-label"></label>
                <input asp-for="ListaDesejos.DesejoData" class="form-control" />
