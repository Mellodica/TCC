@model IEnumerable<ControleFinanceiro.Models.ListaDesejo>

@{
	ViewData["Title"] = "Lista de Desejos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
	<link rel="stylesheet" href="~/assets/css/estilo-btn-table.css" />
</head>


<body>
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="header">
							<h4 class="title">@ViewData["Title"]</h4>
						</div>
						<br />
						<div class="content row">
							<div class="col-lg-1">
								<div>
									<p>
										<a asp-action="Create" class="btn btn-primary btn btn-info btn-fill pull-left">
											<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
										</a>
									</p>
								</div>
							</div>
						</div>

						<div class="content table-responsive">
							<table class="un table">
								<thead>
									<tr>
										<th>
											<b>@Html.DisplayNameFor(model => model.DesejoValor)</b>
										</th>
										<th>
											<b>@Html.DisplayNameFor(model => model.DesejoData)</b>
										</th>
										<th>
											<b>@Html.DisplayNameFor(model => model.Categoria)</b>
										</th>
										<th>
											<b>@Html.DisplayNameFor(model => model.FormaPagamento)</b>
										</th>
										<th>
											<b>@Html.DisplayNameFor(model => model.ListaProduto)</b>
										</th>
										<th>
											<b>@Html.DisplayNameFor(model => model.StatusCompra)</b>
										</th>
										<th></th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
											<td>
												@Html.DisplayFor(modelItem => item.DesejoValor)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.DesejoData)
											</td>
											<td>
												@Html.DisplayFor(ModelItem => item.Categoria)
											</td>
											<td>
												@Html.DisplayFor(ModelItem => item.FormaPagamento)
											</td>
											<td>
												@Html.DisplayFor(ModelItem => item.ListaProduto)
											</td>
											<td>
												@Html.DisplayFor(ModelItem => item.StatusCompra)
											</td>

											<td>
												<a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.DesejoId">
													<span class="glyphicon glyphicon-edit"></span>
												</a>
												<a class="btn btn-info" asp-action="Details" asp-route-id="@item.DesejoId">
													<span class="glyphicon glyphicon-eye-open"></span>
												</a>
												<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.DesejoId">
													<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
												</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

