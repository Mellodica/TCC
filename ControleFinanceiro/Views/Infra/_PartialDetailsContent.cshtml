@model ControleFinanceiro.Models.Infra.UsuarioApp


<div class="content">
	<div class="row">
		<div class="form-group col-md-12">
			<label asp-for="UsuarioId" class="control-label"></label>
			<br />
			<div class="input-group">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-key" aria-hidden="true"></i>
					</span>
				</div>
				<input asp-for="UsuarioId" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="PrimeiroNome" class="control-label"></label>
			<br />
			<div class="input-group">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-address-card-o" aria-hidden="true"></i>
					</span>
				</div>
				<input asp-for="PrimeiroNome" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="Sobrenome" class="control-label"></label>
			<br />
			<div class="input-group">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-user-circle-o" aria-hidden="true"></i>
					</span>
				</div>
				<input asp-for="Sobrenome" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="DataNascimento" class="control-label"></label>
			<br />
			<div class="input-group">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-address-card-o" aria-hidden="true"></i>
					</span>
				</div>
				<input asp-for="DataNascimento" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="Salario.SalarioValor" class="control-label"></label>
			<br />
			<div class="input-group">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-address-card-o" aria-hidden="true"></i>
					</span>
				</div>
				<input asp-for="Salario.SalarioData" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="Profissao" class="control-label"></label>
			<br />
			<div class="input-group">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-address-card-o" aria-hidden="true"></i>
					</span>
				</div>
				<input asp-for="Profissao" class="form-control" disabled="disabled" />
			</div>
			<div class="form-group text-left h3">
				<input type="hidden" asp-for="UsuarioId" />
				<a asp-action="PerfilUsuario" class="btn btn-block btn-warning btn-fill" asp-route-id="@Model.UsuarioId">Alterar perfil</a>
				<a asp-controller="Controles" asp-action="Index" class="btn btn-block btn-info btn-fill pull-right">Voltar</a>
			</div>
		</div>
	</div>
	<div class="col-3">
		<img class="img-thumbnail" src="@Url.Action("PegarFoto", "UsuarioApp", new { id = Model.UsuarioId })" style="display:block; margin-left:auto;margin-right:auto;" />
		@Html.ActionLink("Download", "DownloadFoto", "UsuarioApp", new { id = Model.UsuarioId }, null)
	</div>
</div>
