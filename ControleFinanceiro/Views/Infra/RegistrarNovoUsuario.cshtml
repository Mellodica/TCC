@model ControleFinanceiro.Models.Infra.UsuarioViewModel
@{
	ViewData["Title"] = "Cadastrar Novo Usuario";
	Layout = "~/Views/Shared/_LayoutGeral.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-9 centro">
				<div class="card">
					<hr />
					<div class="header">
						<h4 class="title">@ViewData["Title"]</h4>
						<br />
					</div>
					<div class="content">
						<div class="row">
							<div class="form-group col-md-12">
								<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
									<div asp-validation-summary="All" class="text-danger"></div>
									<div class="form-group">
										<label asp-for="UserName" class="control-label" hidden></label>
										<input asp-for="UserName" class="form-control" placeholder="Login - Nome Usuário" />
										<span asp-validation-for="UserName" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="PrimeiroNome" class="control-label" hidden></label>
										<input asp-for="PrimeiroNome" class="form-control" placeholder="Primeiro Nome" />
										<span asp-validation-for="PrimeiroNome" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="Sobrenome" class="control-label" hidden></label>
										<input asp-for="Sobrenome" class="form-control" placeholder="Sobrenome" />
										<span asp-validation-for="Sobrenome" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="DataNascimento" class="control-label">
											<i class="fa fa-calendar title" aria-hidden="true"></i>
											<span style="padding-left:10px">Data de Nascimento</span>
										</label>
										<input asp-for="DataNascimento" class="form-control" />
										<span asp-validation-for="DataNascimento" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="Email" class="control-label" hidden></label>
										<input asp-for="Email" class="form-control" placeholder="E-mail" />
										<span asp-validation-for="Email" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="Password" class="control-label" hidden></label>
										<input asp-for="Password" class="form-control" placeholder="Senha" />
										<span asp-validation-for="Password" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="ConfirmPassword" class="control-label" hidden></label>
										<input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar Senha" />
										<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
									</div>
									<div class="form-group text-left h3">
										<button type="submit" class="btn btn-block btn-fill">Registrar</button>
										<a asp-controller="" asp-action="Index" class="btn btn-block btn-info btn-fill pull-right">Voltar</a>
									</div>
								</form>
							</div>
							<div class="col-md-4">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@section ScriptPage {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}

