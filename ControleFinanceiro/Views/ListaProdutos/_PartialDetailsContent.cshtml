@model ControleFinanceiro.Models.ListaProduto

<div class="content">
	<div class="row">
		<div class="form-group col-md-12">
			<!--
				<label asp-for="ProdutoId" class="control-label hidden"></label>
				<br />
				<div class="input-group col-md-12">
					<div class="input-group-prepend">
						<span class="input-group-text">
							<i class="fa fa-key title" aria-hidden="true"></i>
						</span>
					</div>
					<input asp-for="ProdutoId" class="form-control" disabled="disabled" />
				</div>
				-->
			<label asp-for="ProdutoNome" class="control-label hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-shopping-bag title" aria-hidden="true"></i>
						<span style="padding-left:10px">Nome</span>
					</span>
				</div>
				<input asp-for="ProdutoNome" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="ProdutoDescricao" class="control-label hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-edit title" aria-hidden="true"></i>
						<span style="padding-left:10px">Descrição</span>
					</span>
				</div>
				<input asp-for="ProdutoDescricao" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="Categoria.CategoriaNome" class="control-label  hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-list-alt title" aria-hidden="true"></i>
						<span style="padding-left:10px">Categoria</span>
					</span>
				</div>
				<input asp-for="Categoria.CategoriaNome" class="form-control" disabled="disabled" />
			</div>

			<label asp-for="FormaPagamento.FormaNome" class="control-label  hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-credit-card-alt title" aria-hidden="true"></i>
						<span style="padding-left:10px">Forma de Pagamento</span>
					</span>
				</div>
				<input asp-for="FormaPagamento.FormaNome" class="form-control" disabled="disabled" />
			</div>

			<label asp-for="StatusCompra.StatusNome" class="control-label  hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-check-square title" aria-hidden="true"></i>
						<span style="padding-left:10px">Situação do Produto</span>
					</span>
				</div>
				<input asp-for="StatusCompra.StatusNome" class="form-control" disabled="disabled" />
			</div>

			<div class="form-group text-left h3">
				<input type="hidden" asp-for="ProdutoId" />
				<a asp-action="Edit" class="btn btn-block btn-warning btn-fill" asp-route-id="@Model.ProdutoId">Editar</a>
				<a asp-action="Index" class="btn btn-block btn-info btn-fill pull-right">Voltar</a>
			</div>
		</div>
	</div>
</div>
