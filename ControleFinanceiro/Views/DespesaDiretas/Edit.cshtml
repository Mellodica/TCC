@model ControleFinanceiro.Models.DespesaDireta

@{
	ViewData["Title"] = "Alterar Despesa";
	Layout = "~/Views/Shared/_LayoutGeral.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-9 centro">
				<div class="card">
					<hr />
					<div class="header">
						<h4 class="title">@ViewData["Title"]</h4>
						<br />
					</div>
					<div class="content">
						<div class="row">
							<div class="form-group col-md-12">
								<form asp-action="Edit">
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									<input type="hidden" asp-for="DespDirId" />
									<div class="form-group">
										<label asp-for="DespesaDirNome" class="control-label">
											<i class="fa fa-shopping-bag title" aria-hidden="true"></i>
											<span style="padding-left:10px">Nome</span>
										</label>
										<input asp-for="DespesaDirNome" class="form-control" />
										<span asp-validation-for="DespesaDirNome" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="DespesaDirDescricao" class="control-label">
											<i class="fa fa-edit title" aria-hidden="true"></i>
											<span style="padding-left:10px">Descrição</span>
										</label>
										<input asp-for="DespesaDirDescricao" class="form-control" />
										<span asp-validation-for="DespesaDirDescricao" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="DespDirValor" class="control-label">
											<i class="fa fa-usd title" aria-hidden="true"></i>
											<span style="padding-left:10px">Valor</span>
										</label>
										<input asp-for="DespDirValor" class="form-control" />
										<span asp-validation-for="DespDirValor" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="DespDirData" class="control-label">
											<i class="fa fa-calendar title" aria-hidden="true"></i>
											<span style="padding-left:10px">Data da Despesa</span>
										</label>
										<input asp-for="DespDirData" class="form-control" />
										<span asp-validation-for="DespDirData" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="CategoriaId" class="control-label">
											<i class="fa fa-list-alt title" aria-hidden="true"></i>
											<span style="padding-left:10px">Categoria</span>
										</label>
										<select asp-for="CategoriaId" class="form-control" asp-items="@ViewBag.Categorias"></select>
									</div>
									<div class="form-group">
										<label asp-for="FormaId" class="control-label">
											<i class="fa fa-credit-card-alt title" aria-hidden="true"></i>
											<span style="padding-left:10px">Forma de Pagamento</span>
										</label>
										<select asp-for="FormaId" class="form-control" asp-items="@ViewBag.Formas"></select>
									</div>
									<div class="form-group">
										<label asp-for="StatusId" class="control-label">
											<i class="fa fa-check-square title" aria-hidden="true"></i>
											<span style="padding-left:10px">Situação da Compra</span>
										</label>
										<select asp-for="StatusId" class="form-control" asp-items="@ViewBag.Status"></select>
									</div>
									<div class="form-group text-center h3">
										<input type="submit" value="Atualizar" class="btn btn-block btn-fill" />
										<a asp-action="Index" class="btn btn-info btn-fill btn-block pull-right">Voltar</a>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section ScriptPage {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
