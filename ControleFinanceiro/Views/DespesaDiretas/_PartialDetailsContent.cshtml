@model ControleFinanceiro.Models.DespesaDireta

<div class="content">
	<div class="row">
		<div class="form-group col-md-12">
			<label asp-for="DespesaDirNome" class="control-label hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-shopping-bag title" aria-hidden="true"></i>
						<span style="padding-left:10px">Nome da Despesa</span>
					</span>
				</div>
				<input asp-for="DespesaDirNome" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="DespesaDirDescricao" class="control-label hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-edit title" aria-hidden="true"></i>
						<span style="padding-left:10px">Descrição</span>
					</span>
				</div>
				<input asp-for="DespesaDirDescricao" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="DespDirValor" class="control-label  hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-usd title" aria-hidden="true"></i>
						<span style="padding-left:10px">Valor</span>
					</span>
				</div>
				<input asp-for="DespDirValor" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="FormaPagamento.FormaNome" class="control-label  hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-credit-card-alt title" aria-hidden="true"></i>
						<span style="padding-left:10px">Forma de Pagamento</span>
					</span>
				</div>
				<input asp-for="FormaPagamento.FormaNome" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="DespDirData" class="control-label  hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-calendar title" aria-hidden="true"></i>
						<span style="padding-left:10px">Valor</span>
					</span>
				</div>
				<input asp-for="DespDirData" class="form-control" disabled="disabled" />
			</div>
			<div class="form-group text-left h3">
				<input type="hidden" asp-for="DespDirId" />
				<a asp-action="Edit" class="btn btn-block btn-warning btn-fill" asp-route-id="@Model.DespDirId">Editar</a>
				<a asp-action="Index" class="btn btn-block btn-info btn-fill pull-right">Voltar</a>
			</div>
		</div>
	</div>
</div>
