@model IEnumerable<ControleFinanceiro.Models.DespesaDireta>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutGeral.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="panel-heading">
	<h3 class="panel-title">Total despesa = @Model.Sum(obj => obj.DespDirValor).ToString("F2")</h3>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DespesaDirNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DespesaDirDescricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DespDirValor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DespDirData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormaPagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DespesaDirNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DespesaDirDescricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DespDirValor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DespDirData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusCompra.StatusId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormaPagamento.FormaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.CategoriaId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DespDirId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DespDirId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DespDirId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
