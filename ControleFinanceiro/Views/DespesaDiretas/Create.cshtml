@model ControleFinanceiro.Models.DespesaDireta

@{
	ViewData["Title"] = "Cadastrar uma nova Despesa";
	Layout = "~/Views/Shared/_LayoutGeral.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-9 centro">
				<div class="card">
					<hr />
					<div class="header">
						<h4 class="title">@ViewData["Title"]</h4>
						<br />
					</div>
					<div class="content">
						<div class="row">
							<div class="form-group col-md-12">
								<form asp-action="Create">
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									<div class="form-group">
										<label asp-for="DespesaDirNome" class="control-label"></label>
										<input asp-for="DespesaDirNome" class="form-control" />
										<span asp-validation-for="DespesaDirNome" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="DespesaDirDescricao" class="control-label"></label>
										<input asp-for="DespesaDirDescricao" class="form-control" />
										<span asp-validation-for="DespesaDirDescricao" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="DespDirValor" class="control-label"></label>
										<input asp-for="DespDirValor" class="form-control" />
										<span asp-validation-for="DespDirValor" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="DespDirData" class="control-label"></label>
										<input asp-for="DespDirData" class="form-control" />
										<span asp-validation-for="DespDirData" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="Categoria.CategoriaNome" class="control-label hidden"></label>
										<select asp-for="CategoriaId" class="form-control" asp-items="@(new SelectList(@ViewBag.Categorias, "CategoriaId", "CategoriaNome"))"></select>
									</div>
									<div class="form-group">
										<label asp-for="FormaPagamento.FormaNome" class="control-label hidden"></label>
										<select asp-for="FormaId" class="form-control" asp-items="@(new SelectList(@ViewBag.Formas, "FormaId", "FormaNome"))"></select>
									</div>
									<div class="form-group">
										<label asp-for="StatusCompra.StatusNome" class="control-label hidden"></label>
										<select asp-for="StatusId" class="form-control" asp-items="@(new SelectList(@ViewBag.StatusCompras, "StatusId", "StatusNome"))"></select>
									</div>
									<div class="form-group">
										<input type="submit" value="Create" class="btn btn-default" />
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@section ScriptPage {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}