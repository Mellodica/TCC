@model ControleFinanceiro.Models.DespesaDireta
<div class="content">
	<div class="row">
		<div class="form-group col-md-12">
			<br />
			<!--
				<label asp-for="DespDirId" class="control-label hidden"></label>
				<br />
				<div class="input-group col-md-12">
					<div class="input-group-prepend">
						<span class="input-group-text">
							<i class="fa fa-key" aria-hidden="true"></i>
						</span>
					</div>
					<input asp-for="DespDirId" class="form-control" disabled="disabled" />
				</div>
				-->

			<label asp-for="DespDirValor" class="control-label hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-usd" aria-hidden="true"></i>
						<span style="padding-left:10px">Valor</span>
					</span>
				</div>
				<input asp-for="DespDirValor" class="form-control" disabled="disabled" />
			</div>

			<label asp-for="DespDirData" class="control-label hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-calendar" aria-hidden="true"></i>
						<span style="padding-left:10px">Previsão</span>
					</span>
				</div>
				<input asp-for="DespDirData" class="form-control" disabled="disabled" />
			</div>

			<label asp-for="DespesaDirNome" class="control-label hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-shopping-bag" aria-hidden="true"></i>
						<span style="padding-left:10px">Nome</span>
					</span>
				</div>
				<input asp-for="DespesaDirNome" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="DespesaDirDescricao" class="control-label hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-edit" aria-hidden="true"></i>
						<span style="padding-left:10px">Descrição</span>
					</span>
				</div>
				<input asp-for="DespesaDirDescricao" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="Categoria.CategoriaNome" class="control-label hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-list-alt" aria-hidden="true"></i>
						<span style="padding-left:10px">Categoria</span>
					</span>
				</div>
				<input asp-for="Categoria.CategoriaNome" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="FormaPagamento.FormaNome" class="control-label hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-credit-card-alt" aria-hidden="true"></i>
						<span style="padding-left:10px">Forma de Pagamento</span>
					</span>
				</div>
				<input asp-for="FormaPagamento.FormaNome" class="form-control" disabled="disabled" />
			</div>
			<label asp-for="StatusCompra.StatusNome" class="control-label hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-check-square" aria-hidden="true"></i>
						<span style="padding-left:10px">Situação da Despesa</span>
					</span>
				</div>
				<input asp-for="StatusCompra.StatusNome" class="form-control" disabled="disabled" />
			</div>
			<div class="form-group text-left h3">
				<button type="button" data-toggle="modal" data-target="#modalConfirmationDelete" class="btn btn-danger btn-fill btn-block">
					Remover
				</button>
				<a asp-action="Index" class="btn btn-info btn-fill btn-block">Voltar</a>
			</div>
		</div>
		<div class="modal fade" id="modalConfirmationDelete" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="deleteModal">Remoção de Despesas</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<p>Confirma a exclusão da Despesa @Model.DespesaDirNome.ToUpper() ??</p>
					</div>
					<div class="modal-footer">
						<form asp-action="Delete">
							<input type="hidden" asp-for="DespDirId" />
							<input type="submit" value="Remover Despesa" class="btn btn-danger btn-fill" />
							<button type="button" class="btn btn-info btn-fill" data-dismiss="modal">Fechar</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
