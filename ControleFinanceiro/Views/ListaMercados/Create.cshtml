@model ControleFinanceiro.Models.ListaMercado


@{
	ViewData["Title"] = "Criar uma Lista de Mercado";
	Layout = "~/Views/Shared/_LayoutGeral.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-9 centro">
				<div class="card">
					<hr />
					<div class="header">
						<h4 class="title">@ViewData["Title"]</h4>
						<br />
					</div>
					<div class="content">
						<div class="row">
							<div class="form-group col-md-12">
								<form asp-action="Create">
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									

									<div class="form-group">
										<label asp-for="MercadoNome" class="control-label hidden"></label>
										<input asp-for="MercadoNome" placeholder="Nome do Mercado" class="form-control" />
										<span asp-validation-for="MercadoNome" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="MercadoData" class="control-label"></label>
										<input asp-for="MercadoData" class="form-control" />
										<span asp-validation-for="MercadoData" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="Categoria.CategoriaNome" class="control-label hidden"></label>
										<select asp-for="CategoriaId" class="form-control" asp-items="@(new SelectList(@ViewBag.Categorias, "CategoriaId", "CategoriaNome"))"></select>
									</div>
									<div class="form-group">
										<label asp-for="FormaPagamento.FormaNome" class="control-label hidden"></label>
										<select asp-for="FormaId" class="form-control" asp-items="@(new SelectList(@ViewBag.Formas, "FormaId", "FormaNome"))"></select>
									</div>
									<div class="form-group">
										<label asp-for="StatusCompra.StatusNome" class="control-label hidden"></label>
										<select asp-for="StatusId" class="form-control" asp-items="@(new SelectList(@ViewBag.StatusCompras, "StatusId", "StatusNome"))"></select>
									</div>
									<div class="form-group text-left h3">

										<a onclick="SalvarLista();" href="#" class="btn btn-block btn-fill"> Salvar Lista</a>
										<a asp-action="Index" class="btn btn-block btn-info btn-fill pull-right">Voltar</a>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


<div id="divProdutos" style="display:none;">
</div>

@section ScriptPage {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="~/js/Mercado.js"></script>
}

