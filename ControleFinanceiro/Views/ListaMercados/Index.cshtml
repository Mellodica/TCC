@model IEnumerable<ControleFinanceiro.Models.ListaMercado>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListaProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MercadoValor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MercadoData)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.FormaPagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusCompra)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ListaProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MercadoValor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MercadoData)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.FormaPagamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusCompra)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.MercadoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MercadoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MercadoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
