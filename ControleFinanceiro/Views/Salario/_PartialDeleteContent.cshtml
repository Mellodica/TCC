@model ControleFinanceiro.Models.Salario
<div class="content">
	<div class="row">
		<div class="form-group col-md-12">
			<br />

			<label asp-for="SalarioValor" class="control-label hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-usd" aria-hidden="true"></i>
						<span style="padding-left:10px">Valor</span>
					</span>
				</div>
				<input asp-for="SalarioValor" class="form-control" disabled="disabled" />
			</div>

			<label asp-for="SalarioData" class="control-label hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-calendar" aria-hidden="true"></i>
						<span style="padding-left:10px">Previsão</span>
					</span>
				</div>
				<input asp-for="SalarioData" class="form-control" disabled="disabled" />
			</div>

			<label asp-for="SalarioNome" class="control-label hidden"></label>
			<br />
			<div class="input-group col-md-12">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<i class="fa fa-shopping-bag" aria-hidden="true"></i>
						<span style="padding-left:10px">Nome</span>
					</span>
				</div>
				<input asp-for="SalarioNome" class="form-control" disabled="disabled" />
			</div>
			
			<div class="form-group text-left h3">
				<button type="button" data-toggle="modal" data-target="#modalConfirmationDelete" class="btn btn-danger btn-fill btn-block">
					Remover
				</button>
				<a asp-action="Index" class="btn btn-info btn-fill btn-block">Voltar</a>
			</div>
		</div>
		<div class="modal fade" id="modalConfirmationDelete" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="deleteModal">Remoção de Salarios</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<p>Confirma a exclusão do Salario @Model.SalarioNome.ToUpper() ??</p>
					</div>
					<div class="modal-footer">
						<form asp-action="Delete">
							<input type="hidden" asp-for="SalarioId" />
							<input type="submit" value="Remover Produto" class="btn btn-danger btn-fill" />
							<button type="button" class="btn btn-info btn-fill" data-dismiss="modal">Fechar</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
