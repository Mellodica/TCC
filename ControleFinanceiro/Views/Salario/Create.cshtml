@model ControleFinanceiro.Models.Salario

@{
	ViewData["Title"] = "Adicionar um novo Salario";
	Layout = "~/Views/Shared/_LayoutGeral.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-9 centro">
				<div class="card">
					<hr />
					<div class="header">
						<h4 class="title">@ViewData["Title"]</h4>
						<br />
					</div>
					<div class="content">
						<div class="row">
							<div class="form-group col-md-12">
								<form asp-action="Create">
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									<div class="form-group">
										<label asp-for="SalarioNome" class="control-label hidden"></label>
										<input asp-for="SalarioNome" placeholder="Nome do produto" class="form-control" />
										<span asp-validation-for="SalarioNome" class="text-danger"></span>
									</div>
		
									<div class="form-group">
										<label asp-for="SalarioValor" class="control-label hidden"></label>
										<input asp-for="SalarioValor" placeholder="Valor do produto" class="form-control" />
										<span asp-validation-for="SalarioValor" class="text-danger"></span>
									</div>
									<div class="form-group">
										<label asp-for="SalarioData" class="control-label hidden"></label>
										<input asp-for="SalarioData" placeholder="Previsão de compra" class="form-control" />
										<span asp-validation-for="SalarioData" class="text-danger"></span>
									</div>
									
									<div class="form-group text-left h3">
										<input type="submit" value="Registrar" class="btn btn-block btn-fill" />
										<a asp-action="Index" class="btn btn-block btn-info btn-fill pull-right">Voltar</a>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
</div>

@section ScriptPage {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
